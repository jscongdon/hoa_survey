generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SystemConfig {
  id              String   @id @default("system")
  setupCompleted  Boolean  @default(false)
  developmentMode Boolean  @default(true)
  hoaName         String?
  hoaLogoUrl      String?
  smtpHost        String?
  smtpPort        Int?
  smtpUser        String?
  smtpPass        String?
  smtpFrom        String?
  appUrl          String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Admin {
  id          String   @id @default(cuid())
  email       String   @unique
  password    String
  name        String?
  role        String   @default("FULL")
  twoFactor   Boolean  @default(false)
  secret2FA   String?
  inviteExpires DateTime?
  invitedById String?
  invitedBy   Admin?   @relation("InvitedAdmins", fields: [invitedById], references: [id])
  invites     Admin[]  @relation("InvitedAdmins")
  surveysCreated Survey[] @relation("CreatedSurveys")
  resetToken  String?  @unique
  resetTokenExpires DateTime?
  verificationToken String? @unique
  verificationExpires DateTime?
  createdAt   DateTime @default(now())
}

model MemberList {
  id        String    @id @default(cuid())
  name      String
  members   Member[]  @relation("MemberListsOnMembers")
  surveys   Survey[]
  createdAt DateTime @default(now())
}

model Member {
  id        String     @id @default(cuid())
  lot       String
  name      String
  email     String
  address   String?
  lists     MemberList[] @relation("MemberListsOnMembers")
  responses Response[]
  createdAt DateTime @default(now())
}

model Survey {
  id             String     @id @default(cuid())
  title          String
  description    String?
  opensAt        DateTime
  closesAt       DateTime
  memberListId   String
  memberList     MemberList @relation(fields: [memberListId], references: [id])
  createdById    String?
  createdBy      Admin?     @relation("CreatedSurveys", fields: [createdById], references: [id])
  questions      Question[]
  responses      Response[]
  initialSentAt  DateTime? // When the initial notice was sent to recipients
  showLive       Boolean    @default(false)
  showAfterClose Boolean    @default(true)
  minResponses   Int?       // Minimum number of responses needed (optional)
  minResponsesAll Boolean   @default(false) // If true, minResponses should equal total members in list
  requireSignature Boolean    @default(true) // Whether this survey requires digital signature for responses
  notifyOnMinResponses Boolean @default(false) // Email creator when minResponses reached
  minimalNotifiedAt DateTime?
  groupNotificationsEnabled Boolean @default(true) // Whether to send group notifications for this survey
  createdAt      DateTime @default(now())
}

model Question {
  id            String   @id @default(cuid())
  surveyId      String
  survey        Survey   @relation(fields: [surveyId], references: [id], onDelete: Cascade)
  type          String
  text          String
  // JSON content stored as string (use JSON.parse/stringify in application code)
  options       String?
  // Conditional display rules stored as JSON string (e.g. { triggerOrder: 0, operator: "equals", value: "Yes" })
  showWhen      String?
  // Allow a single 'write-in' option for MULTI_SINGLE questions
  writeIn       Boolean  @default(false)
  // For MULTI_MULTI questions, number of write-in slots available
  writeInCount  Int?     @default(0)
  maxSelections Int?     // For MULTI_MULTI questions: max number of options that can be selected
  required      Boolean  @default(false) // Whether this question must be answered
  order         Int
  answers       Answer[] // Answers to this question
}

model Response {
  id         String   @id @default(cuid())
  surveyId   String
  survey     Survey   @relation(fields: [surveyId], references: [id], onDelete: Cascade)
  memberId   String
  member     Member   @relation(fields: [memberId], references: [id])
  token      String   @unique
  answers    Answer[] // Individual answers for each question
  submittedAt DateTime?
  signed      Boolean  @default(false)
  signedAt    DateTime?
  signatureToken String? @unique
  createdAt  DateTime @default(now())
  @@unique([surveyId, memberId])
}

model Answer {
  id         String   @id @default(cuid())
  responseId String
  response   Response @relation(fields: [responseId], references: [id], onDelete: Cascade)
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  // Store the answer value as string (can be JSON for array answers)
  value      String
  createdAt  DateTime @default(now())
  
  @@unique([responseId, questionId])
}

model Reminder {
  id          String @id @default(cuid())
  surveyId    String
  memberId    String
  sentAt      DateTime
  reminderNum Int
}
